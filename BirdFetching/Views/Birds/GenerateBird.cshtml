@model BirdFetching.Models.BirdModel

@{
    ViewData["Title"] = "Random Bird";
}


<h1>@ViewData["Title"]</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            @* <th>Image</th> *@
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.Description</td>
            @* <td>
            <img src="@Model.ImageUrl" alt="@Model.Name" width="150" />
            </td> *@
        </tr>
    </tbody>
</table>
<a href="@Url.Action("GenerateBird", "Birds")" class="btn btn-primary mt-4">Generate Bird</a>